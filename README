Example
=======

    require 'funfig'
    
    UploadConf = Funfig.new do |p|
      p.root '/services'
      group :nginx   do |p|
        p.folder { File.join(_.root, 'nginx') }
        p.port '8000'
      end
      p.public_ip_port '*:80'
    end
    
    conf = UploadConf.new
    p conf.nginx.folder
    conf.root = "~/MailProject/upload"
    p conf.nginx.folder
    conf.each {|k,v| puts "#{k} #{v}"}
    p conf
    p conf.to_hash()
    p conf.to_hash(true)
    
    Up1Conf = UploadConf.clone do
      group :nginx do
        param :folder do File.join(_.root, 'nganx') end
        param :location, '/public'
      end
    end
    
    conf1 = Up1Conf.new
    conf1.update(conf.to_hash())
    p conf1
    conf1.nginx_reset!
    p conf1

